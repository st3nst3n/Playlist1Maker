<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LayoutBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SubscreenDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">
            @dimen/layout_four_sided_padding
        </item>
    </style>

    <style name="MainScreenButtonsDesign" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/main_layout_top_bottom_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textSize">@dimen/first_layout_text</item>
        <item name="cornerRadius">@dimen/buttons_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_distance</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsItemsDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">
            @dimen/layout_four_sided_padding
        </item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textSize">@dimen/setting_items</item>
    </style>

    <style name="SubscreenItemsBackMainMenuDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_start_subscreen_items</item>
        <item name="android:layout_marginTop">@dimen/top_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textSize">@dimen/first_layout_text</item>
    </style>

    <style name="ArrowBackDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_four_sided_padding</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:gravity">start</item>
        <item name="android:src">@drawable/arrow_left</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="LightOrDarkStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:padding">@dimen/top_padding</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App_Name_Design">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">top</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textSize">@dimen/first_layout_text</item>
    </style>

    <style name="edit_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_search_height</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">
            @dimen/edit_search_margin_vertical
        </item>
        <item name="android:background">@drawable/edit_light_theme</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/search_draw_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/icon_distance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
        <item name="android:textSize">@dimen/setting_items</item>
    </style>

    <style name="search_clear_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/clear_button_marginEnd</item>
        <item name="android:layout_marginTop">@dimen/clear_button_marginTop</item>
        <item name="android:src">@drawable/clear_button</item>
    </style>
</resources>